[properties]
name=Enabled Agent Plugins
description=Check the number of agent plugins enabled
category=alienvault,platform
profiles=Sensor:>4.0
type=command
command=grep \.cfg /etc/ossim/agent/config.yml /etc/ossim/agent/config.cfg | wc -l

# Match with the total count of enabled plugins
[Many plugins enabled critical]
fail_if_empty=True
pattern=(\d+)
conditions=@int@:<100
severity=High
warning=More than 100 plugins enabled
advice=This could be affecting hardly to the performance

# Match with the total count of enabled plugins
[Many plugins enabled]
fail_if_empty=True
pattern=(\d+)
conditions=@int@:<30@or@>100
severity=Medium
warning=Too many plugins enabled
advice=This could be affecting to the performance
