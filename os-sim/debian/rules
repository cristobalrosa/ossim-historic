#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

TMP=`pwd`/debian
LANGUAGES=`ls locale | grep -v CVS`

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.

	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp 
	dh_testdir

	# Add here commands to compile the package.
	./autogen.sh
	$(MAKE)

	for lang in $(LANGUAGES); do \
		/usr/bin/msgfmt -v -o locale/$$lang/LC_MESSAGES/ossim.mo locale/$$lang/LC_MESSAGES/ossim.po; \
	done
	
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	if [ -f "Makefile" ] ; then $(MAKE) clean ; fi
	rm -rf $(TMP)/ossim-framework $(TMP)/ossim-utils $(TMP)/ossim-agent $(TMP)/ossim-server $(TMP)/tmp

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the packages.

	# ossim-mysql
	install -m644 db/*.sql $(TMP)/ossim-mysql/usr/share/doc/ossim-mysql/contrib/
	install -m644 $(TMP)/mysql/*.sql $(TMP)/ossim-mysql/usr/share/doc/ossim-mysql/contrib/

	# ossim-agent
	cd agent ; \
	python setup.py install --prefix=$(CURDIR)/debian/ossim-agent/usr/ ; \
	cd -
	install -m644 etc/agent/config.xml $(TMP)/ossim-agent/etc/ossim/agent/config.xml
	cp etc/agent/plugins/*.xml $(TMP)/ossim-agent/etc/ossim/agent/plugins/

	# ossim-server
	install -m751 src/ossim-server $(TMP)/ossim-server/usr/bin/ossim-server
	install -m644 doc/ossim-server.8 $(TMP)/ossim-server/usr/share/man/man8/ossim-server.8
	install -m644 etc/server/*.xml $(TMP)/ossim-server/etc/ossim/server/

	# ossim-framework
	install -m644 $(TMP)/framework/mrtg-rrd.cfg $(TMP)/ossim-framework/etc/ossim/framework/
	cp -r include/ www/ mrtg/ $(TMP)/ossim-framework/usr/share/ossim/
	find $(TMP)/ossim-framework/usr/share/ossim/ | grep CVS | xargs rm -rf
	find $(TMP)/ossim-framework/usr/share/ossim/ | grep Makefile | xargs rm -rf
	rm -rf $(TMP)/ossim-framework/usr/share/ossim/www/mrtg
	cp $(TMP)/framework/httpd-ssl.conf $(TMP)/ossim-framework/etc/apache-ssl/conf.d/ossim.conf
	cp $(TMP)/framework/httpd.conf $(TMP)/ossim-framework/etc/apache/conf.d/ossim.conf
	install -m751 scripts/control_panel.py $(TMP)/ossim-framework/usr/bin/ossim-controlpanel
	install -m755 scripts/draw_graph_fournier.pl $(TMP)/ossim-framework/usr/lib/cgi-bin/draw_graph.pl

	for lang in $(LANGUAGES); do \
		install -d $(TMP)/ossim-framework/usr/share/locale/$$lang/LC_MESSAGES/ ; \
		install -m 0644 locale/$$lang/LC_MESSAGES/ossim.?o $(TMP)/ossim-framework/usr/share/locale/$$lang/LC_MESSAGES/ ; \
	done

	# ossim-utils
	install -m755 include/ossim_conf.pm $(TMP)/ossim-utils/usr/lib/perl5/
	install -m755 scripts/*.pl $(TMP)/ossim-utils/usr/share/ossim/scripts/
	install -m644 $(TMP)/framework/ossim.conf $(TMP)/ossim-utils/etc/ossim/framework/

	# ossim-contrib
	cp -r contrib $(TMP)/ossim-contrib/usr/share/doc/ossim-contrib/

	# ossim
	install -m755 etc/init.d/ossim $(TMP)/tmp/etc/init.d/


# Build architecture-independent files here.
binary-indep: build install

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs -possim \
		-possim-agent \
		-possim-framework \
		-possim-server \
		-possim-mysql \
		-possim-contrib \
		-possim-utils -i ChangeLog
	dh_installdocs 	-possim             -i $(TMP)/INSTALL
	dh_installdocs 	-possim-agent       -i $(TMP)/INSTALL
	dh_installdocs 	-possim-framework   -i $(TMP)/INSTALL $(TMP)/README.locales `pwd`/README.phpgacl `pwd`/README.oinkmaster `pwd`/README.nessus
	dh_installdocs 	-possim-mysql		-i $(TMP)/INSTALL
	dh_installdocs 	-possim-utils       -i $(TMP)/INSTALL
	dh_installdocs 	-possim-contrib     -i $(TMP)/INSTALL
	dh_installdocs 	-possim-server      -i $(TMP)/INSTALL
	dh_installexamples
#	dh_install
#	dh_installmenu
	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
	dh_python
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
