/var/log/snort/alert {
    daily
    rotate 5
    compress
    missingok
    notifempty
    create 0640 snort adm
    sharedscripts
    prerotate
        /etc/init.d/snort stop 2>&1
    endscript
    postrotate
       find /var/log/snort/ -regextype egrep -regex "/var/log/snort/snort(_eth[0-9])?.[0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9]" -atime +0 -exec rm -f {} \;
    endscript
}