/var/log/ossim/frameworkd.log /var/log/ossim/frameworkd_error.log {
    daily
    rotate 5
    compress
    missingok
    notifempty
    size=1G
    # postrotate script will only be run once, not once 
    # for each log which is rotated
    sharedscripts
    postrotate
        /etc/init.d/ossim-framework restart > /dev/null 2>&1
    endscript
}
