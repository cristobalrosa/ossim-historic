#!/bin/bash

export LANG=C

data_dir=`grep ^data_dir /etc/ossim/framework/ossim.conf | cut -d= -f2`
mrtg_path=`grep ^mrtg_path /etc/ossim/framework/ossim.conf | cut -d= -f2`

cd $data_dir/mrtg/hosts
./create_cfg.pl

cd $data_dir/mrtg/nets
./create_cfg.pl

cd $data_dir/mrtg/global
./create_cfg.pl

#`$mrtg_path/mrtg /etc/ossim/framework/mrtg.cfg`
`$mrtg_path/mrtg /etc/ossim/framework/mrtg-rrd.cfg`

